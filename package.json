{
  "name": "ethena-turborepo",
  "private": true,
  "scripts": {
    "anvil": "anvil --fork-url $ANVIL_FORK_URL --fork-block-number 17082074",
    "build": "turbo run build",
    "build:web": "turbo run build --filter=!@ethena/usde",
    "check": "turbo run check --no-cache",
    "clean": "turbo run clean",
    "generate": "turbo run generate",
    "deploy:anvil:localNetwork": "dotenv -- turbo run deploy:anvil:localNetwork --concurrency 11",
    "deploy:anvil:publicNetworkFork": "dotenv -- turbo run deploy:anvil:publicNetworkFork --concurrency 11",
    "deploy:anvil:localNetwork:background": "dotenv -- turbo run deploy:anvil:localNetwork:background --concurrency 11",
    "deploy:anvil:localNetwork:background:ci": "dotenv -- turbo run deploy:anvil:localNetwork:background:ci --concurrency 11",
    "deploy:anvil:publicNetworkFork:background": "dotenv -- turbo run deploy:anvil:publicNetworkFork:background --concurrency 11",
    "dev": "dotenv -- turbo run dev --concurrency 11",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint --parallel",
    "sort": "sort-package-json 'package.json' 'apps/*/package.json' 'config/*/package.json' 'protocols/{,!(node_modules)/}**/package.json' 'packages/{,!(node_modules)/}**/package.json'",
    "test": "NEXT_PUBLIC_PLAYWRIGHT_ENABLED=true  dotenv -- turbo run test --parallel",
    "install:playwright:browser": "dotenv -- turbo run install:playwright:browser",
    "install:foundry:deps": "dotenv -- turbo run install:foundry:deps",
    "test:deployCreate2": "dotenv -- turbo run test:deployCreate2",
    "test:e2eDeployment": "dotenv -- turbo run test:e2eTestingDeployment",
    "test:e2eDeployment:ci": "dotenv -- turbo run test:e2eTestingDeployment:ci",
    "test:e2eExecute": "dotenv -- turbo run test:e2eExecuteTests",
    "test:e2eExecute:ci": "dotenv -- turbo run test:e2eExecuteTests:ci",
    "test:e2eOnlyTest": "dotenv -- turbo run test:e2eOnlyTest",
    "test:coverage:lending": "dotenv -- turbo run test:coverage:lending",
    "generate:addresses:ui": "dotenv -- turbo run generate:addresses:ui"
  },
  "devDependencies": {
    "@ethena/eslint-config": "workspace:*",
    "@ethena/prettier-config": "workspace:*",
    "@ethena/typescript-config": "workspace:*",
    "@types/node": "18.0.0",
    "cross-port-killer": "^1.4.0",
    "dotenv-cli": "6.0.0",
    "eslint": "8.38.0",
    "prettier": "2.5.1",
    "sort-package-json": "2.4.1",
    "turbo": "latest",
    "wait-port": "^1.0.4"
  },
  "packageManager": "pnpm@8.6.0"
}